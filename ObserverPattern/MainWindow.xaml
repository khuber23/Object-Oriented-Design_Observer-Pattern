<Window x:Class="ObserverPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObserverPattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="peopleListBox" HorizontalAlignment="Center" Height="150" Margin="0,10,0,0" VerticalAlignment="Top" Width="380" />
        <Button x:Name="getWeatherButton" Content="Get Weather" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="GetWeatherButton_Click"/>
        <Button x:Name="subscribeButton" Content="Subscribe" HorizontalAlignment="Left" Margin="95, 0, 0, 10" VerticalAlignment="Bottom" Width="75" Click="subscribeButton_Click"/>
        <Button x:Name="unsubscribeButton" Content="Unsubscribe" HorizontalAlignment="Left" Margin="180, 0, 0, 10" VerticalAlignment="Bottom" Width="75" Click="unsubscribeButton_Click"/>
    </Grid>
</Window>
